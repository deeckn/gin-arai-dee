<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghost_white"
    tools:context=".FoodHub">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Text and Icon -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:id="@+id/food_hub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingEnd="0dp"
                android:text="@string/food_hub"
                android:textColor="@color/wine"
                android:textSize="48sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:background="@color/wine"
                android:src="@drawable/ic_food"
                android:contentDescription="@string/food_hub"/>
        </GridLayout>

        <!-- Menu Cards -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2">

            <!-- Browse Food Card -->
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@drawable/food_food_menu"
                android:layout_marginStart="40dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.8"
                    android:background="@drawable/round_button_yellow"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/food"
                    android:textAlignment="center"
                    android:textColor="@color/ghost_white"
                    android:textSize="30sp" />

            </RelativeLayout>

            <!-- Browse Recipes Card -->
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:background="@drawable/recipes_food_menu"
                android:layout_marginStart="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="Recipes"
                    android:textAlignment="center"
                    android:textColor="@color/ghost_white"
                    android:textSize="30sp"
                    android:alpha="0.8"
                    android:background="@drawable/round_button_yellow"/>

            </RelativeLayout>

        </GridLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/dock_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/maximum_yellow_red"
        app:itemBackground="@color/maximum_yellow_red"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>